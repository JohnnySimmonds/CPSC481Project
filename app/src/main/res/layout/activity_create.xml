<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adsulliv.cpsc481project.CreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:text="Create Activity"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:id="@+id/descriptionTitle"
        android:text="Info"
        android:layout_alignTop="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/description"
        android:layout_toStartOf="@+id/description" />

    <EditText
        android:layout_width="125pt"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/activity"
        android:inputType="text"
        android:layout_alignTop="@+id/activityTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/descriptionTitle"
        android:layout_toRightOf="@+id/descriptionTitle" />

    <TextView
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:id="@+id/activityTitle"
        android:text="Activity"
        android:layout_above="@+id/descriptionTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="125pt"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/price"
        android:inputType="text"
        android:layout_below="@+id/descriptionTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:id="@+id/priceTitle"
        android:text="Price"
        android:layout_below="@+id/descriptionTitle"
        android:layout_toLeftOf="@+id/activity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="125pt"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="100dp"
        android:id="@+id/description"
        android:inputType="text"
        android:layout_below="@+id/camImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/camImg"
        android:background="#000000"
        android:visibility="invisible"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/title"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postActivity"
        android:text="Post Activity"
        android:onClick="onClick"
        android:layout_alignTop="@+id/gallery"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera"
        android:text="Take Photo"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:text="Gallery"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/dummy"
        android:background="#000000"
        android:visibility="invisible"
        android:layout_above="@+id/description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- Test to see if text is saved to file properly -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:textSize="25dp"
        android:text="TEST ME PLZ"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
